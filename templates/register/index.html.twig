{% extends 'base.html.twig' %}

{% block title %}Register - Hypnos{% endblock %}

{% block body %}
   <section class="h-100">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col">
        <div class="card card-registration my-4">
          <div class="row g-0">
            <div class="col-xl-6 d-none d-xl-block">
              <img
                src="/images/login-hotel.jpeg"
                alt="Sample photo"
                class="img-fluid"
                style="border-top-left-radius: .25rem; border-bottom-left-radius: .25rem;"
              />
            </div>
            <div class="col-xl-6">
              <div class="card-body p-md-5 text-black">
                <h3 class="mb-5 text-uppercase">Hypnos Registration Form</h3>

              {{ form_start(form) }}
                <div class="row">
                  <div class="col-md-6 mb-4">
                    <div class="form-outline">
                 {#      <input type="text" id="formFirstName" class="form-control form-control-lg" />
                      <label class="form-label" for="formFirstName">First name</label> #}
                    </div>
                  </div>
                  <div class="col-md-6 mb-4">
                    <div class="form-outline">

                   {#    <label class="form-label" for="formLastName">Last name</label> #}
                    </div>
                  </div>
                </div>

                <div class="form-outline mb-4">
                  {{form_row(form.email, {'attr': {'class': 'form-control form-control-lg'}}) }}
                </div>
                <div class="form-outline mb-4">
                  {{form_row(form.password, {'attr': {'class': 'form-control form-control-lg'}}) }}
                  {{form_row(form.password_confirm, {'attr': {'class': 'form-control form-control-lg'}}) }}
                </div>

                <div class="d-flex justify-content-end pt-3">
                  
                  {{form_row(form.submit, {'attr': {'class': 'btn btn-lg ms-2 btn-submit-login'}}) }}
                  
                </div>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                

                {{ form_end(form) }}
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
{% endblock %}
